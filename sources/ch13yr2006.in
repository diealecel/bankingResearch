tatuteatlarge>; <plaw congress="101" isprivate="false" number="402">Pub. L. 101–402,</plaw> §3, Oct. 1, 1990, <statuteatlarge page="866" volume="104">104 Stat. 866</statuteatlarge>; <plaw congress="101" isprivate="false" number="507">Pub. L. 101–507,</plaw> title II, Nov. 5, 1990, <statuteatlarge page="1369" volume="104">104 Stat. 1369</statuteatlarge>; <plaw congress="101" isprivate="false" number="508">Pub. L. 101–508,</plaw> title II, §§2101–2103(a), Nov. 5, 1990, <statuteatlarge page="1388" volume="104">104 Stat. 1388</statuteatlarge>–17; <plaw congress="101" isprivate="false" number="625">Pub. L. 101–625,</plaw> title III, §§326(a), 327, 329, 330(a), title IV, §429, Nov. 28, 1990, <statuteatlarge page="4137" pages="4137, 4138, 4171" volume="104">104 Stat. 4137, 4138, 4171</statuteatlarge>; <plaw congress="102" isprivate="false" number="40">Pub. L. 102–40,</plaw> title IV, §402(d)(2), May 7, 1991, <statuteatlarge page="239" volume="105">105 Stat. 239</statuteatlarge>; <plaw congress="102" isprivate="false" number="389">Pub. L. 102–389,</plaw> title II, Oct. 6, 1992, <statuteatlarge page="1591" pages="1591, 1593" volume="106">106 Stat. 1591, 1593</statuteatlarge>; <plaw congress="102" isprivate="false" number="550">Pub. L. 102–550,</plaw> title I, §185(c)(1), title V, §§503(a), 504–506(a), 507(a), title X, §1012(k)(2), Oct. 28, 1992, <statuteatlarge page="3747" pages="3747, 3779" volume="106">106 Stat. 3747, 3779</statuteatlarge>–3782, 3907; <plaw congress="103" isprivate="false" number="211">Pub. L. 103–211,</plaw> title I, Feb. 12, 1994, <statuteatlarge page="12" volume="108">108 Stat. 12</statuteatlarge>; <plaw congress="103" isprivate="false" number="327">Pub. L. 103–327,</plaw> title II, Sept. 28, 1994, <statuteatlarge page="2314" volume="108">108 Stat. 2314</statuteatlarge>; <plaw congress="104" isprivate="false" number="204">Pub. L. 104–204,</plaw> title IV, §§424, 425(a), 426, Sept. 26, 1996, <statuteatlarge page="2927" pages="2927, 2928" volume="110">110 Stat. 2927, 2928</statuteatlarge>; <plaw congress="105" isprivate="false" number="65">Pub. L. 105–65,</plaw> title II, §211, Oct. 27, 1997, <statuteatlarge page="1366" volume="111">111 Stat. 1366</statuteatlarge>; <plaw congress="105" isprivate="false" number="276">Pub. L. 105–276,</plaw> title II, §§212, 224, 225(a), 228, Oct. 21, 1998, <statuteatlarge page="2486" pages="2486, 2489" volume="112">112 Stat. 2486, 2489</statuteatlarge>–2491; <plaw congress="106" isprivate="false" number="74">Pub. L. 106–74,</plaw> title II, §207, Oct. 20, 1999, <statuteatlarge page="1072" volume="113">113 Stat. 1072</statuteatlarge>; <plaw congress="106" isprivate="false" number="281">Pub. L. 106–281,</plaw> §2, Oct. 6, 2000, <statuteatlarge page="865" volume="114">114 Stat. 865</statuteatlarge>; <plaw congress="106" isprivate="false" number="377">Pub. L. 106–377,</plaw> §1(a)(1) [title II, §§209(a), 225], Oct. 27, 2000, <statuteatlarge page="1441" pages="1441, 1441A" volume="114">114 Stat. 1441, 1441A</statuteatlarge>–25, 1441A–30; <plaw congress="106" isprivate="false" number="569">Pub. L. 106–569,</plaw> title XI, §1103(f), Dec. 27, 2000, <statuteatlarge page="3031" volume="114">114 Stat. 3031</statuteatlarge>; <plaw congress="107" isprivate="false" number="73">Pub. L. 107–73,</plaw> title II, §207(a), Nov. 26, 2001, <statuteatlarge page="674" volume="115">115 Stat. 674</statuteatlarge>; <plaw congress="107" isprivate="false" number="326">Pub. L. 107–326,</plaw> §2, Dec. 4, 2002, <statuteatlarge page="2792" volume="116">116 Stat. 2792</statuteatlarge>; <plaw congress="108" isprivate="false" number="386">Pub. L. 108–386,</plaw> §8(b), Oct. 30, 2004, <statuteatlarge page="2231" volume="118">118 Stat. 2231</statuteatlarge>; <plaw congress="108" isprivate="false" number="447">Pub. L. 108–447,</plaw> div. I, title II, §§222, 223, Dec. 8, 2004, <statuteatlarge page="3321" volume="118">118 Stat. 3321</statuteatlarge>; <plaw congress="109" isprivate="false" number="13">Pub. L. 109–13,</plaw> div. A, title VI, §6073, May 11, 2005, <statuteatlarge page="300" volume="119">119 Stat. 300</statuteatlarge>.)</p>
