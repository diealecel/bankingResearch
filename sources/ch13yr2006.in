ngress="97" isprivate="false" number="35">Pub. L. 97–35,</plaw> title III, §331(j), Aug. 13, 1981, <statuteatlarge page="413" volume="95">95 Stat. 413</statuteatlarge>; <plaw congress="97" isprivate="false" number="289">Pub. L. 97–289,</plaw> §1(k), Oct. 6, 1982, <statuteatlarge page="1230" volume="96">96 Stat. 1230</statuteatlarge>; <plaw congress="98" isprivate="false" number="35">Pub. L. 98–35,</plaw> §1(k), May 26, 1983, <statuteatlarge page="197" volume="97">97 Stat. 197</statuteatlarge>; <plaw congress="98" isprivate="false" number="109">Pub. L. 98–109,</plaw> §1(k), Oct. 1, 1983, <statuteatlarge page="745" volume="97">97 Stat. 745</statuteatlarge>; <plaw congress="98" isprivate="false" number="181">Pub. L. 98–181,</plaw> title IV, §401(j), Nov. 30, 1983, <statuteatlarge page="1208" volume="97">97 Stat. 1208</statuteatlarge>; <plaw congress="98" isprivate="false" number="479">Pub. L. 98–479,</plaw> title I, §104(a)(8), Oct. 17, 1984, <statuteatlarge page="2225" volume="98">98 Stat. 2225</statuteatlarge>; <plaw congress="99" isprivate="false" number="120">Pub. L. 99–120,</plaw> §1(j), Oct. 8, 1985, <statuteatlarge page="503" volume="99">99 Stat. 503</statuteatlarge>; <plaw congress="99" isprivate="false" number="156">Pub. L. 99–156,</plaw> §1(j), Nov. 15, 1985, <statuteatlarge page="816" volume="99">99 Stat. 816</statuteatlarge>; <plaw congress="99" isprivate="false" number="219">Pub. L. 99–219,</plaw> §1(j), Dec. 26, 1985, <statuteatlarge page="1731" volume="99">99 Stat. 1731</statuteatlarge>; <plaw congress="99" isprivate="false" number="267">Pub. L. 99–267,</plaw> §1(k), Mar. 27, 1986, <statuteatlarge page="74" volume="100">100 Stat. 74</statuteatlarge>; <plaw congress="99" isprivate="false" number="272">Pub. L. 99–272,</plaw> title III, §3007(j), Apr. 7, 1986, <statuteatlarge page="105" volume="100">100 Stat. 105</statuteatlarge>; <plaw congress="99" isprivate="false" number="289">Pub. L. 99–289,</plaw> §1(b), May 2, 1986, <statuteatlarge page="412" volume=